{% schema %}
  {
    "name": "Season Collection",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Most Popular"
      },
      {
        "type": "text",
        "id": "subtext",
        "label": "Subtext",
        "default": "Check Out Now â†’"
      }
    ],
    "blocks": [
      {
        "type": "banner",
        "name": "Banner Item",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Banner Image"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link URL"
          }
        ]
      }
    ],
    "max_blocks": 12,
    "presets": [
      {
        "name": "Season Collection",
        "category": "Custom"
      }
    ]
  }
  {% endschema %}
  
  <section class="season-collection-section-padding">
    <div class="flex flex-col items-center gap-1 text-center mb-4">
      <h4 class="season-heading">
        {{ section.settings.heading }}
      </h4>
      <p class="season-subtext">
        {{ section.settings.subtext }}
      </p>
    </div>
  
    <div class="season-scroll-wrapper">
  {% for block in section.blocks %}
    {% if block.settings.image != blank %}
      <div class="season-banner-item" {{ block.shopify_attributes }}>
        <a href="{{ block.settings.link | default: '#' }}">
          <img
            src="{{ block.settings.image | img_url: '533x' }}"
            width="{{ block.settings.image.width }}"
            height="{{ block.settings.image.height }}"
            alt="{{ block.settings.image.alt | escape }}"
            loading="lazy"
          />
        </a>
      </div>
    {% endif %}
  {% endfor %}
</div>

  </section>
  
  <style>
  .season-collection-section-padding {
    margin: 0;
    padding: 24px 16px 0;
  }

  @media screen and (min-width: 768px) {
    .season-collection-section-padding {
      padding-left: 24px;
      padding-right: 24px;
    }
  }

  @media screen and (min-width: 1024px) {
    .season-collection-section-padding {
      margin-bottom: 72px;
      padding-left: 0;
      padding-right: 0;
    }
  }

  .season-heading {
    color: #1A1E31;
    font-size: 22px;
    font-weight: 700;
    text-align: center;
    margin-bottom: 6px;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
  }

  .season-subtext {
    color: #666875;
    font-size: 15px;
    font-weight: 400;
    text-align: center;
    margin-bottom: 12px;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
  }

  .season-scroll-wrapper {
    display: flex;
    gap: 12px;
    padding-bottom: 1rem;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
  }

  @media (min-width: 1024px) {
    .season-scroll-wrapper {
      gap: 20px;
    }
  }

  .season-scroll-wrapper::-webkit-scrollbar {
    display: none;
  }

  .season-scroll-wrapper {
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  .season-banner-item {
    flex: 0 0 70%;
    scroll-snap-align: start;
    border-radius: 8px;
    overflow: hidden;
  }

  @media (min-width: 768px) {
    .season-banner-item {
      flex: 0 0 40%;
    }
  }

  @media (min-width: 1024px) {
    .season-banner-item {
      flex: 0 0 24%;
    }
  }

  .season-banner-item img {
    width: 100%;
    height: auto;
    object-fit: cover;
    border-radius: 8px;
    display: block;
  }
</style>
