{% schema %}
  {
    "name": "Season Collection",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Most Popular"
      },
      {
        "type": "text",
        "id": "subtext",
        "label": "Subtext",
        "default": "Check Out Now â†’"
      }
    ],
    "blocks": [
      {
        "type": "banner",
        "name": "Banner Item",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Banner Image"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link URL"
          }
        ]
      }
    ],
    "max_blocks": 12,
    "presets": [
      {
        "name": "Season Collection",
        "category": "Custom"
      }
    ]
  }
  {% endschema %}
  
  <section class="season-collection-section lg:px-2">
    <div class="season-header">
      <h4 class="season-heading">{{ section.settings.heading }}</h4>
      <p class="season-subtext">{{ section.settings.subtext }}</p>
    </div>
  
    <div class="season-scroll-wrapper">
      {% for block in section.blocks %}
        {% if block.settings.image %}
          <div class="season-banner-item" {{ block.shopify_attributes }}>
            <a href="{{ block.settings.link | default: '#' }}">
              <img
                src="{{ block.settings.image | img_url: '533x' }}"
                width="{{ block.settings.image.width }}"
                height="{{ block.settings.image.height }}"
                alt="{{ block.settings.image.alt | escape }}"
                loading="lazy"
              />
            </a>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </section>
  
  <style>
    .season-collection-section {
      padding: 24px 16px 0;
      margin: 0;
    }
  
    @media screen and (min-width: 768px) {
      .season-collection-section {
        padding-left: 24px;
        padding-right: 24px;
      }
    }
  
    @media (min-width: 1024px) {
  .lg\:px-2 {
    padding-left: 5rem;  
    padding-right: 5rem; 
  }
}

  
    .season-header {
      text-align: center;
      margin-bottom: 16px;
    }
  
    .season-heading {
      color: #1A1E31;
      font-size: 22px;
      font-weight: 700;
      margin: 0;
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
    }
  
    @media screen and (min-width: 1024px) {
      .season-heading {
        font-size: 24px;
      }
    }
  
    .season-subtext {
      color: #666875;
      font-size: 15px;
      font-weight: 400;
      margin-top: 6px;
      margin-bottom: 0;
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
    }
  
    @media screen and (min-width: 1024px) {
      .season-subtext {
        font-size: 16px;
      }
    }
  
    .season-scroll-wrapper {
      display: flex;
      gap: 12px;
      padding-bottom: 1rem;
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      -webkit-overflow-scrolling: touch;
    }
  
    .season-scroll-wrapper::-webkit-scrollbar {
      display: none;
    }
  
    .season-scroll-wrapper {
      scrollbar-width: none;
      -ms-overflow-style: none;
    }
  
    .season-banner-item {
      flex: 0 0 60%;
      scroll-snap-align: start;
      border-radius: 8px;
      overflow: hidden;
    }
  
    @media screen and (min-width: 768px) {
      .season-banner-item {
        flex: 0 0 40%;
      }
    }
  
    @media screen and (min-width: 1024px) {
      .season-banner-item {
        flex: 0 0 24%;
      }
    }
  
    .season-banner-item img {
      width: 100%;
      height: auto;
      object-fit: cover;
      border-radius: 8px;
      display: block;
    }
  </style>
  